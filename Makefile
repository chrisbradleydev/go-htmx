include .env

# ==================================================================================== #
# HELPERS
# ==================================================================================== #

# confirm changes
.PHONY: confirm
confirm:
	@echo 'Are you sure? [y/N] ' && read ans && [ $${ans:-N} = y ]

# ==================================================================================== #
# DEVELOPMENT
# ==================================================================================== #
.DEFAULT_GOAL := run

# run the cmd/web application
.PHONY: run
run:
	APP_ENV=${APP_ENV} APP_PORT=${APP_PORT} air
